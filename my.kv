#: import FadeTransition kivy.uix.screenmanager.FadeTransition

WindowManager:
    transition: FadeTransition()
    StartWindow:
    PlayWindow:
    MenuWindow:
<StartWindow>:
    name: "main"

    Button:
        text: "START"
        background_color: 1,.6, 1.86,1
        font_size: 30
        on_release:
            root.start()
            app.root.current = "menu"


<PlayWindow>:
    main_text: main_text
    problems:problems
    name: "second"
    points:points

    GridLayout:
        cols: 1


        FloatLayout:
            Label:
                id: problems
                size_hint: 0.1,.3
                pos_hint: {"top":.8,"right":.3}
                text: "1 + 1 = ?"
            Label:
                id: main_text
                size_hint: 0.1,.3
                pos_hint: {"top":.5,"right":.3}

                text: ""
            Button:
                size_hint: 0.1,.3
                pos_hint: {"top":.8,"right":.8}
                background_color: .7,.2,.4,1
                text: "CLEAR"
                on_release:
                    main_text.text = ""
            Button:
                id: enter_b
                size_hint: 0.1,.3
                pos_hint:{"top":.4,"right":.8}
                background_color: 0.39607843137,0.80392156862,0.19607843137,1
                text: "ENTER"
                on_release:




                    root.random_problem()
                    root.display_points()
                    main_text.text = ""
            Label:
                id: points
                size_hint: 0.1,.3
                pos_hint: {"top":.6,"right":.8}

                text: "Lives: 3"


        GridLayout:

            cols: 5

            spacing: [35,35]

            Button:
                text: "0"
                on_release:
                    root.change_text(main_text.text,0)

            Button:
                text: "1"
                on_release:
                    root.change_text(main_text.text,1)
            Button:
                text: "2"
                on_release:
                    root.change_text(main_text.text,2)
            Button:
                text: "3"
                on_release:
                    root.change_text(main_text.text,3)
            Button:
                text: "4"
                on_release:
                    root.change_text(main_text.text,4)
            Button:
                text: "5"
                on_release:
                    root.change_text(main_text.text,5)
            Button:
                text: "6"
                on_release:
                    root.change_text(main_text.text,6)
            Button:
                text: "7"
                on_release:
                    root.change_text(main_text.text,7)
            Button:
                text: "8"
                on_release:
                    root.change_text(main_text.text,8)
            Button:
                text: "9"
                on_release:
                    root.change_text(main_text.text,9)

<MenuWindow>:
    name: "menu"
    FloatLayout:

        Button:
            size_hint: 0.6,.2
            pos_hint:{"top":.9,"right":.8}
            background_color: .1,1,.1,1
            text: "Easy"
            on_release:
                root.easy()
                app.root.current = "second"

        Button:
            size_hint: 0.6,.2
            pos_hint:{"top":.6,"right":.8}
            background_color: .1,.1,1,1
            text: "Medium"
            on_release:
                root.medium()
                app.root.current = "second"

        Button:
            size_hint: 0.6,.2
            pos_hint:{"top":.3,"right":.8}
            background_color: .5,.1,.5,1
            text: "Hard"
            on_release:
                root.hard()
                app.root.current = "second"

<P>:
    popscore:popscore
    Label:
        id: popscore
        text: ""
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.25, "top": .5}
        font_size: "30"
